<%= render :partial => @recipe %> 
<h4><%= @recipe.description %></h4>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Destroy', @recipe, :method => :delete, :confirm => "Are you sure?" %> |
<%= link_to 'Back', recipes_path %>

<h2>Steps</h2>
<div id="steps">
   <%= render :partial => @recipe.steps %>
</div>

<% form_for [@recipe, Step.new], :remote => true do |f| %>
  <p>
  <%= f.label :instruction, "New Step" %><br />
  <%= f.text_area :instruction%>
  </p>
  <p><%= f.submit "Add Instruction" %></p>
<% end %>

